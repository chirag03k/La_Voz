<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>org.lavoz.website.HomeServletPage</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ArticleWriter</servlet-name>
        <servlet-class>org.lavoz.website.ArticleWriter</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ArticleWriter</servlet-name>
        <url-pattern>/upload-article</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Show</servlet-name>
        <servlet-class>org.lavoz.website.ArticleShower</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Show</servlet-name>
        <url-pattern>/show-article</url-pattern>
    </servlet-mapping>


